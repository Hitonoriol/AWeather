<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hourlyForecastCard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    app:contentPadding="@dimen/card_margin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hourlyTempView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000 Â°C"
            android:textSize="@dimen/forecast_font_size" />

        <ImageView
            android:id="@+id/weatherIcon"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            app:srcCompat="@drawable/w01" />

        <TextView
            android:id="@+id/hourlyDayView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_margin"
            android:text="Thu 30, 21:00"
            android:textSize="@dimen/hourly_forecast_font_size" />
    </LinearLayout>
</androidx.cardview.widget.CardView>