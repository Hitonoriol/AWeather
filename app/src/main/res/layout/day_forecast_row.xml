<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dayRow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/dayWeatherImg"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/w01" />

    <TextView
        android:id="@+id/dayView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/textsep" />

    <TextView
        android:id="@+id/dayConditionView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weather condition" />

    <TextView
        android:id="@+id/dayTempView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0° / 0°"
        android:textAlignment="textEnd" />
</TableRow>